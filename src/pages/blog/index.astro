---
<BaseLayout>
	<style>
		main {
			width: 960px;
		}
		
		ul {
			display: flex;
			flex-wrap: wrap;
			gap: 2rem;
			list-style-type: none;
			margin: 0;
			padding: 0;
		}
	
		ul.posts li {
			width: calc(50% - 1rem);
		}
	
		ul.posts li * {
			text-decoration: none;
			transition: 0.2s ease;
		}
	
		ul.posts li:first-child {
			width: 100%;
			margin-bottom: 1rem;
			text-align: center;
		}
	
		ul.posts li:first-child img {
			width: 100%;
		}
	
		ul.posts li:first-child .title {
			font-size: 2.369rem;
		}
	
		ul li img {
			margin-bottom: 0.5rem;
			border-radius: 12px;
		}
	
		ul li a {
			display: block;
		}
	
		.title {
			margin: 0;
			color: var(--font-color);
			line-height: 1;
		}
	
		.date {
			margin: 0;
			color: rgb(var(--gray));
		}
	
		ul li a:hover h4,
		ul li a:hover .date {
			color: rgb(var(--accent));
		}
	
		ul a:hover img {
			box-shadow: var(--box-shadow);
		}
	
		@media (max-width: 720px) {
			ul {
				gap: 0.5em;
			}
			ul li {
				width: 100%;
				text-align: center;
			}
			ul li:first-child {
				margin-bottom: 0;
			}
			ul li:first-child .title {
				font-size: 1.563em;
			}
		}
	</style>
	<main>
		<section>
			<ul class="posts">
				{
					posts.map((post) => (
						<li>
							<a href={`/blog/${post.slug}/`}>
								<img width={720} height={360} src={post.data.heroImage != "" && post.data.heroImage ? post.data.heroImage : "/blog-placeholder-2.jpg"} alt="" />
								<h4 class="title">{post.data.title}</h4>
								<p class="date">
									<FormattedDate date={post.data.pubDate} />
								</p>
							</a>
						</li>
					))
				}
			</ul>
		</section>
	</main>
</BaseLayout>
